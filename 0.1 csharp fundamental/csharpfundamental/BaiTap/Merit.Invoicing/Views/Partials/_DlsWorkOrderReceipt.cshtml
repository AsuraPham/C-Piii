@model Merit.Components.WorkOrders.Queries.Projections.DlsWorkOrderReceipt

<div class="woReceipt">

    <div class="table">

        <div class="row" style="margin-bottom: 50px;">
            <div class="col-xs-6 col-xs-offset-3">
                <img class="logo center-block" src="/app/Content/images/logo.png">
            </div>
            <div class="col-xs-1 col-xs-offset-3 no-margin closeDiv">
                <span><i class="fa fa-times centerAligned" ng-click="cancel()"></i></span>
            </div>
        </div>

        <div class="row bold">(949) 481-0685</div>

        <div class="row bold">WORK ORDER RECEIPT</div>

        <div class="row">@Model.ClientAddress</div>

        <hr />

        <div class="row">
            <div class="col-xs-3 col-xs-offset-2 leftAligned">Tax Id</div>
            <div class="col-xs-5 rightAligned">@Model.TaxId</div>
        </div>

        <div class="row">
            <div class="col-xs-3 col-xs-offset-2 leftAligned">WO #</div>
            <div class="col-xs-5 rightAligned">@Model.WorkOrderNumber</div>
        </div>

        <div class="row">
            <div class="col-xs-3 col-xs-offset-2 leftAligned">Date Time</div>
            <div class="col-xs-5 rightAligned">@Model.CreatedLocal</div>
        </div>

        <div class="row">
            <div class="col-xs-3 col-xs-offset-2 leftAligned">PO #</div>
            <div class="col-xs-5 rightAligned">@Model.PoNumber</div>
        </div>

        <div class="row">
            <div class="col-xs-3 col-xs-offset-2 leftAligned">Truck #</div>
            <div class="col-xs-5 rightAligned">@Model.TruckNumber</div>
        </div>

        <div class="row">
            <div class="col-xs-3 col-xs-offset-2 leftAligned">Trailer #</div>
            <div class="col-xs-5 rightAligned">@Model.TrailerNumber</div>
        </div>

        <div class="row">
            <div class="col-xs-3 col-xs-offset-2 leftAligned">Door #</div>
            <div class="col-xs-5 rightAligned">@Model.DoorNumber</div>
        </div>

        <div class="row">
            <div class="col-xs-3 col-xs-offset-2 leftAligned">Client's Dept</div>
            <div class="col-xs-5 rightAligned">@Model.ClientDepartment</div>
        </div>

        <div class="row">
            <div class="col-xs-3 col-xs-offset-2 leftAligned">Product</div>
            <div class="col-xs-5 rightAligned">@Model.Product</div>
        </div>

        <div class="row">
            <div class="col-xs-3 col-xs-offset-2 leftAligned">Vendor</div>
            <div class="col-xs-5 rightAligned">@Model.Vendor</div>
        </div>

        <div class="row">
            <div class="col-xs-3 col-xs-offset-2 leftAligned">Carrier</div>
            <div class="col-xs-5 rightAligned">@Model.Carrier</div>
        </div>

        <div class="row">
            <div class="col-xs-3 col-xs-offset-2 leftAligned">Bill To</div>
            <div class="col-xs-5 rightAligned">@Model.BillTo</div>
        </div>

        <div class="row">
            <div class="col-xs-3 col-xs-offset-2 leftAligned">Payment</div>
            <div class="col-xs-5 rightAligned">@Model.Payment</div>
        </div>

        <div class="row">
            <div class="col-xs-3 col-xs-offset-2 leftAligned">Check #</div>
            <div class="col-xs-5 rightAligned">@Model.CheckNumber</div>
        </div>

        <div class="row" hidden="@(Model.Authorization == "")">
            <div class="col-xs-3 col-xs-offset-2 leftAligned">Authorization</div>
            <div class="col-xs-5 rightAligned">@Model.Authorization</div>
        </div>

        <hr />

        <div class="row footer">
            <div class="col-xs-3 col-xs-offset-1 leftAligned">@Model.ReceiptDate</div>
            <div class="col-xs-3 col-xs-offset-4 rightAligned">www.merit3pl.com</div>
        </div>

    </div>

</div>