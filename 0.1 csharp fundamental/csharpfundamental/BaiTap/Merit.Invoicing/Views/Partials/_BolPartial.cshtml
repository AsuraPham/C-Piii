@model Merit.Components.WorkOrders.Queries.Projections.BOLProjections

<div class="container invoice-wh">
<p style="font-size: 23px"><b>STRAIGHT BILL OF LADING-SHORT FROM - Original - Not Negotiable</b></p>
    <div class="tableInvoice">
        <div class="title-header">
            <p style="float: left;" class="no-margin-p">CARRIER:</p>
            <p style="float: left; margin-left: 100px;" class="no-margin-p">BO# @Model.WorkOrderNumber</p>
